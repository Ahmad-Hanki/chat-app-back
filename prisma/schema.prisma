generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  clerkId   String      @unique
  email     String      @unique
  name      String?
  image     String?
  UserRooms UserRooms[]
  Message   Message[]
}

model Room {
  id         String   @id @default(cuid())
  name       String
  roomNumber Int      @unique
  createdAt  DateTime @default(now())

  UserRooms UserRooms[]
  Message   Message[]
}

model UserRooms {
  id     String @id @default(cuid())
  userId String
  roomId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room Room @relation(fields: [roomId], onDelete: Cascade, references: [id])
}

model Message {
  id      String @id @default(cuid())
  message String
  userId  String
  roomId  String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room Room @relation(fields: [roomId], onDelete: Cascade, references: [id])

  createdAt DateTime @default(now())
}
